<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/add_card_dialog_width"
    android:layout_height="wrap_content"
    android:padding="@dimen/dialog_content_padding">

    <include
        android:id="@+id/layout_form_add_card"
        layout="@layout/form_add_card" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_form_add_card"
        android:gravity="right"
        android:orientation="horizontal">
        <Button
            android:id="@+id/dialog_add_card_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ui_btn_cancel" />

        <Button
            android:id="@+id/dialog_add_card_btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ui_btn_add" />


    </LinearLayout>

</RelativeLayout>